# Disable directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(config\.php|database\.sql|\.htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP settings
php_flag display_errors off
php_flag log_errors on
php_value error_log errors.log

# Set default charset
AddDefaultCharset UTF-8